{
    "name": "mnemesong/spex",
    "description": "The package provides objects and an interface for express specifications (describes the conditions for fetching records from storage)",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "*",
        "phpstan/phpstan-webmozart-assert": "*",
        "phpstan/extension-installer": "*"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Mnemesong\\Spex\\": "src/",
            "Mnemesong\\SpexUnitTest\\": "test-unit"
        }
    },
    "authors": [
        {
            "name": "Pantagruel74",
            "email": "tostar74@mail.ru"
        }
    ],
    "scripts": {
        "test:unit": "phpunit test-unit",
        "lint:src": "phpstan analyse src --level 9",
        "lint:unit": "phpstan analyse test-unit --level 5"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "webmozart/assert": "1.11.*",
        "mnemesong/structure": "0.3.*"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
